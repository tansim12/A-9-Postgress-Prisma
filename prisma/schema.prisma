generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(uuid())
  password       String 
  name           String
  email          String   @unique
  status         String
  isDelete       Boolean
  role           UserRole @default(user)
  gender         String
  contactNumber  String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  userProfile UserProfile[]
  @@map("users")

}

model UserProfile{
id String @id @default(uuid())
 email String @unique
 profilePhoto String 
 coverPhoto String 
 bio String 
 userId String
 user User @relation(fields: [userId],references: [id])
 status UserStatus @default(active)

 @@map("userProfiles")
}


enum UserRole {
  user
  admin
  vendor
}

enum UserStatus {
  active
  blocked
}
